@page
@model OnlineJobsApp.Pages.JobSeeker.EditProfileModel
@{
    ViewData["Title"] = "Edit profile";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-black-50">Edit profile of customer</strong>
            </div>
        </div>
    </div>

    <div class="card-body p-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="jobSeeker.Id" />
            <input type="hidden" asp-for="jobSeeker.Password" />
            <input type="hidden" asp-for="jobSeeker.CreatedAt" />
            <input type="hidden" asp-for="jobSeeker.IsDeleted" />
            <div class="form-group">
                <label asp-for="jobSeeker.FullName" class="control-label"></label>
                <input asp-for="jobSeeker.FullName" class="form-control" />
                <span asp-validation-for="jobSeeker.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="jobSeeker.Email" class="control-label"></label>
                <input asp-for="jobSeeker.Email" class="form-control"/>
                <span asp-validation-for="jobSeeker.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="jobSeeker.PhoneNumber" class="control-label"></label>
                <input asp-for="jobSeeker.PhoneNumber" class="form-control"/>
                <span asp-validation-for="jobSeeker.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="jobSeeker.Address" class="control-label"></label>
                <input asp-for="jobSeeker.Address" class="form-control" />
                <span asp-validation-for="jobSeeker.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="jobSeeker.Skill" class="control-label"></label>
                <input asp-for="jobSeeker.Skill" class="form-control" />
                <span asp-validation-for="jobSeeker.Skill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> | 
                <a asp-page="./Profile">Back to profile</a>
            </div>
        </form>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
