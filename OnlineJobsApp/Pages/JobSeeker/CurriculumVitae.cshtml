@page
@model OnlineJobsApp.Pages.JobSeeker.CurriculumVitaeModel
@{
    ViewData["Title"] = "Ứng tuyển công việc";

}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Ứng tuyển công việc</h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="row mb-3">
                            <div class="col-md-4 font-weight-bold">Công việc ứng tuyển:</div>
                            <div class="col-md-8">@Model.info.postName</div>
                            <input asp-for="info.postName" type="hidden" />
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 font-weight-bold">Công ty:</div>
                            <div class="col-md-8">@Model.info.companyName</div>
                            <input asp-for="info.companyName" type="hidden" />
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 font-weight-bold">Major:</div>
                            <div class="col-md-8">@Model.info.major</div>
                            <input asp-for="info.major" type="hidden" />
                        </div>
                        <div class="border-top mt-3 mb-3"></div>
                        <div class="row mb-3">
                            <div class="col-md-4 font-weight-bold">Tên ứng viên:</div>
                            <div class="col-md-8">@Model.info.applicantName</div>
                            <input asp-for="info.applicantName" type="hidden" />
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 font-weight-bold">Email:</div>
                            <div class="col-md-8">@Model.info.email</div>
                            <input asp-for="info.email" type="hidden" />
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4 font-weight-bold">Số điện thoại:</div>
                            <div class="col-md-8">@Model.info.phoneNumber</div>
                            <input asp-for="info.phoneNumber" type="hidden" />
                        </div>
                        <div class="border-top mt-3 mb-3"></div>
                        <div class="form-group">
                            <label>Nộp CV</label>
                            <input asp-for="@Model.CVFile" type="file" class="form-control-file" />
                            <span class="text-danger" asp-validation-for="CVFile"></span>
                        </div>
                        <input asp-for="candidate.UserId" type="hidden" />
                        <input asp-for="candidate.PostId" type="hidden" />
                        <input asp-for="candidate.CreatedAt" type="hidden" value="@DateTime.Now" />
                        <button type="submit" class="btn btn-secondary">Ứng tuyển</button>
                    </form>
                </div>
            </div>
        </div>
        @if (@Model.errorMessage != null)
        {
            <div class="alert alert-danger">
                <text>@Model.errorMessage</text>
            </div>
        }
        
    </div>
</div>
