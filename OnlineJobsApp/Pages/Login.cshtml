@page
@model OnlineJobsApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 order-1 order-md-2">
            <div class="card border-0 shadow">
                <div class="card-body">
                    <form method="post">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="userLogin.Email" class="font-weight-bold">Email</label>
                            <input type="text" asp-for="userLogin.Email" class="form-control" />
                            <span class="text-danger" asp-validation-for="userLogin.Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="userLogin.Password" class="font-weight-bold">Password</label>
                            <input type="password" asp-for="userLogin.Password" class="form-control" />
                            <span class="text-danger" asp-validation-for="userLogin.Password"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-secondary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
            @if (@Model.errorMessage != null)
            {
                <div class="alert alert-danger">
                    <text>@Model.errorMessage</text>
                </div>
            }
        </div>
        <div class="col-md-6 order-2 order-md-1">
            <img src="/image/job_search_portals.png" alt="Online Job Seeking" class="img-fluid">
        </div>
    </div>
</div>
