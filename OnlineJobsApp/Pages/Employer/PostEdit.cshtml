@page
@model OnlineJobsApp.Pages.Employer.PostEditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.Com" class="control-label"></label>
                <input asp-for="Post.ComId" class="form-control" type="hidden" value="ViewBag.ComId"/>
                <p>@Model.Post.Com.FullName</p>
            </div>
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <textarea asp-for="Post.Content" class="form-control"></textarea>
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.MajorId" class="control-label"></label>
                <select asp-for="Post.MajorId" class="form-control" asp-items="ViewBag.MajorId"></select>
                <span asp-validation-for="Post.MajorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="postId" value="@Model.Post.Id" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br>

<div>
    <a asp-page="./PostList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
