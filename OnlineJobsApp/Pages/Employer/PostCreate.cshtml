@model OnlineJobsApp.Pages.Employer.PostCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <input asp-for="Post.ComId" type="hidden" value="ViewBag.ComId"/>
            </div>*@
            <div class="form-group">
                <label asp-for="Post.Title" class="control-label"></label>
                <input asp-for="Post.Title" class="form-control" />
                <span asp-validation-for="Post.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <textarea asp-for="Post.Content" class="form-control"></textarea>
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Skill" class="control-label"></label>
                <input asp-for="Post.Skill" class="form-control" />
                <span asp-validation-for="Post.Skill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.MajorId" class="control-label"></label>
                <select asp-for="Post.MajorId" class ="form-control" asp-items="ViewBag.MajorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
