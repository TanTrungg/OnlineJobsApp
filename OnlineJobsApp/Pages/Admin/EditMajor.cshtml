@page
@model OnlineJobsApp.Pages.Admin.EditMajorModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<h4>Major</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Major.Id" />
            <div class="form-group">
                <label asp-for="Major.MajorName" class="control-label"></label>
